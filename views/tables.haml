%h1{:style => 'text-align:center'}= @server.nil? ? 'All Tables' : "Tables for #{@server.name.upcase}"
%table
  %thead
    %th toggle
    %th tablename
  %tbody
    - @tables.each do |table|
      %tr{:class => "#{table.enabled ? 'ok' : 'err'}",  :id => "#{table.id}"}
        %td{:class => 'button_cell'}
          %input{:type => 'button', :value => "#{table.enabled ? 'disable':'enable'}", :class => 'table_button', :id => "#{table.id}_button", :onclick => "toggle_table(#{table.id})"}
        %td{:class => 'table_cell'}= table.name